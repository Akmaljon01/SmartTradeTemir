<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="120dp"
       android:layout_margin="5dp"
       app:cardElevation="5dp"
       app:cardCornerRadius="8dp"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal">


           <ImageView
               android:layout_width="150dp"
               android:layout_height="match_parent"
               android:src="@color/black"
               android:id="@+id/rasmcard"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Tovar nomi"
                  android:layout_gravity="center_horizontal"
                  android:layout_margin="5dp"
                  android:textSize="15sp"
                  android:id="@+id/tovarnomicard"
                  />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Tovar Narxi"
                       android:textAlignment="center"
                       android:layout_margin="5dp"
                       android:textSize="15sp"
                       android:id="@+id/tovarnarxicard"
                       android:layout_weight="1"
                       />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Tovar Summasi"
                       android:textAlignment="center"
                       android:layout_margin="5dp"
                       android:textSize="15sp"
                       android:id="@+id/summatovarcard"
                       android:layout_weight="1"
                       />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:gravity="center_horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="miqdor:"
                       android:textAlignment="center"
                       android:textSize="15sp"
                       android:id="@+id/tovarmiqdor"
                       />
                   <Button
                       android:layout_width="100dp"
                       android:layout_height="match_parent"
                       android:gravity="center"
                      android:text="Delete"
                       android:id="@+id/removecard"
                       android:layout_marginEnd="5dp"
                       />

               </LinearLayout>

           </LinearLayout>


       </LinearLayout>



   </androidx.cardview.widget.CardView>

</LinearLayout>