<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carpet 3.5m emiks"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/tovarnomi"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200 ming (kv)"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/tovarnarxi"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="karopka"
            android:textSize="15sp"
             android:inputType="numberDecimal"
            android:id="@+id/edtkaropkaga"

            />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="dona"
            android:textSize="15sp"
            android:inputType="number"
            android:id="@+id/edtdonaga"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="jami"
            android:textSize="15sp"
            android:inputType="numberDecimal"
            android:id="@+id/edtjamiga"

            />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="narxi"
            android:textSize="15sp"
            android:inputType="number"
            android:id="@+id/edtnarxiga"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >

        <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:hint="summa"
            android:textSize="15sp"
            android:id="@+id/summaxisobla"
            android:layout_margin="5dp"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:text="Saqlash"
            android:id="@+id/summasaqla"
            android:layout_margin="5dp"/>

    </LinearLayout>


</LinearLayout>